<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Location">

  <View
      android:id="@+id/titlebar"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:background="@drawable/register_title_bar"></View>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:padding="10dp"
      android:text="Setup Your Home Location"
      android:textAlignment="center"
      android:textColor="@android:color/white"
      android:textSize="25sp" />

  <LinearLayout
    android:paddingTop="70dp"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/titlebar">
    <TextView
      android:textColor="@android:color/darker_gray"

      android:layout_margin="20dp"
      android:textSize="20sp"
      android:textAlignment="center"
      android:paddingLeft="70dp"
      android:paddingRight="70dp"
      android:text="This is to register your home in our mapping. Don't worry, you can change it later"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:paddingLeft="70dp"
      android:paddingRight="70dp"
      android:text="Click the button below to start"
      android:textAlignment="center"
      android:textSize="14sp" />

    <Button
        android:stateListAnimator="@null"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:elevation="15dp"
        android:textSize="30sp"
        android:textColor="@android:color/darker_gray"
        android:text="Start"
        android:height="200dp"
        android:width="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_start_button" />

  </LinearLayout>

  <Button
    android:padding="20dp"
   android:layout_margin="45dp"
    android:textSize="20sp"
    android:textColor="@android:color/white"
    android:text="Finish Setup"
    android:background="@drawable/finish_green_button_shape"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />


</RelativeLayout>