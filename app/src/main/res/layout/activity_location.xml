<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".SetLocationsPage">

  <View
    android:id="@+id/titlebar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/register_title_bar"></View>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:padding="10dp"
    android:text="Setup Your Home Location"
    android:textAlignment="center"
    android:textColor="@android:color/white"
    android:textSize="14sp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/titlebar"
    android:orientation="vertical"
    android:paddingTop="70dp">

    <TextView
      android:layout_width="wrap_content"

      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_margin="20dp"
      android:paddingLeft="70dp"
      android:paddingRight="70dp"
      android:text="This is to register your home in our mapping. Don't worry, you can change it later"
      android:textAlignment="center"
      android:textColor="@android:color/darker_gray"
      android:textSize="13sp" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:paddingLeft="70dp"
      android:paddingRight="70dp"
      android:text="Click the button below to start"
      android:textAlignment="center"
      android:textSize="14sp" />

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="30dp"
      android:width="150dp"
      android:height="150dp"
      android:background="@drawable/round_start_button"
      android:elevation="15dp"
      android:stateListAnimator="@null"
      android:onClick="getUserLocation"
      android:text="Start"
      android:textColor="@android:color/darker_gray"
      android:textSize="30sp" />

  </LinearLayout>

  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="25dp"
    android:background="@drawable/login_button_shape"
    android:padding="15dp"
    android:text="Finish Setup"
    android:textColor="@android:color/white"
    android:textSize="14sp" />


</RelativeLayout>