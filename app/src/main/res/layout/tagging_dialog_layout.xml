<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="20dp">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:text="Before you move on, try checking our list to see if your item falls under any of our categories" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/nunito_bold"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:text="It just makes your errand easier to find" />

  <com.google.android.material.chip.ChipGroup
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:id="@+id/tags_chip_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp" />

  <androidx.appcompat.widget.AppCompatAutoCompleteTextView
    android:completionThreshold="2"
    android:paddingStart="20dp"
    android:id="@+id/tag_textbox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/stroke_textbox"
    android:hint="Eg. Food, Electronics, Cars etc."
    android:padding="10dp" />

</LinearLayout>