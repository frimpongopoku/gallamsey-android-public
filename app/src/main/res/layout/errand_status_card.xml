<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:padding="20dp"
  android:background="@color/xd_default"
  app:cardElevation="2dp"
  android:layout_height="wrap_content">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/xml_runner_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_margin="45dp"
      android:src="@drawable/shoe50" />

    <LinearLayout
      android:id="@+id/middle_linear"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:layout_marginTop="25dp"
      android:layout_marginRight="10dp"
      android:layout_toRightOf="@+id/xml_runner_img"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Kwame Dumebi"
        android:textColor="@color/card_name_green" />

      <TextView
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Is running your errand" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Ongoing" />
    </LinearLayout>
    <LinearLayout
      android:orientation="vertical"
      android:layout_marginTop="25dp"
      android:layout_marginRight="40dp"
     android:layout_alignParentRight="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="22nd March 2011" />
      <ImageView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/shoe50" />


    </LinearLayout>

  </RelativeLayout>

</androidx.cardview.widget.CardView>