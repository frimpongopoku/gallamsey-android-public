<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/chat_wallpaper"
  tools:context=".ChattingPage">

  <include
    layout="@layout/app_back_with_pic_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true" />

  <androidx.recyclerview.widget.RecyclerView
    android:layout_above="@+id/textbox_for_chatting"
    android:layout_marginTop="55dp"
    android:id="@+id/chatting_recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  </androidx.recyclerview.widget.RecyclerView>

  <!-- TEXTING BOX -->

  <LinearLayout
    android:id="@+id/textbox_for_chatting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/appColorDark"
    android:elevation="3dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="3">

    <EditText
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:layout_weight="2"
      android:background="@drawable/messaging_text_box"
      android:hint="Send a message"
      android:paddingLeft="40dp"
      android:textColor="@android:color/white"
      android:textColorHint="@color/lightest_grey"
      android:textSize="13dp" />

    <ImageView
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_weight="1"
      android:background="@drawable/app_color_ripple_borderless"
      android:clickable="true"
      android:src="@drawable/send_icon" />

  </LinearLayout>
</RelativeLayout>