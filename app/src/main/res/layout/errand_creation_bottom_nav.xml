<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_above="@id/bottom_fake_nav"
    android:background="@color/lightest_grey" />

  <Button
    android:id="@+id/select_riders_btn"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:textSize="16sp"
    android:textColor="@color/green"
    android:fontFamily="@font/nunito_bold"
    android:layout_above="@id/bottom_fake_nav"
    android:layout_alignParentRight="true"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/select_rider_button"
    android:elevation="5dp" />

  <LinearLayout
    android:id="@+id/bottom_fake_nav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/bottom_fake_nav"
    android:layout_alignParentBottom="true"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
        android:id="@+id/help_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/errand_info_btn_proper"
        android:clickable="true" />


      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
          android:id="@+id/tab_for_description_btn"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignParentStart="true"
          android:layout_centerInParent="true"
          android:layout_marginEnd="15dp"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:clickable="true"
          android:src="@drawable/ic_description_black_24dp" />


        <ImageView
          android:id="@+id/tab_for_estimated_cost_btn"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_centerInParent="true"
          android:layout_marginTop="1dp"
          android:layout_marginEnd="15dp"
          android:layout_toEndOf="@id/tab_for_description_btn"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:clickable="true"
          android:src="@drawable/errand_payment_icon" />

        <ImageView
          android:id="@+id/tab_for_allowance_btn"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_centerInParent="true"
          android:layout_marginEnd="15dp"
          android:layout_toEndOf="@id/tab_for_estimated_cost_btn"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:clickable="true"
          android:src="@drawable/ic_card_giftcard_black_24dp" />

        <ImageView
          android:id="@+id/tab_for_location_btn"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_centerInParent="true"
          android:layout_marginEnd="15dp"
          android:layout_toEndOf="@id/tab_for_allowance_btn"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:clickable="true"
          android:src="@drawable/location_vector_icon" />

        <ImageView
          android:id="@+id/tab_for_details_btn"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_centerInParent="true"
          android:layout_marginEnd="15dp"
          android:layout_toEndOf="@id/tab_for_location_btn"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:clickable="true"
          android:src="@drawable/ic_list" />

        <ImageView
          android:id="@+id/tab_for_tagging_btn"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_centerInParent="true"
          android:layout_marginEnd="15dp"
          android:layout_toEndOf="@id/tab_for_details_btn"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:clickable="true"
          android:src="@drawable/label_normal" />
      </RelativeLayout>

    </RelativeLayout>

  </LinearLayout>
</merge>