<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Register">


  <View
    android:id="@+id/titlebar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:alpha="1"
    android:background="@drawable/register_title_bar"
    android:elevation="4dp"></View>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:elevation="5dp"
    android:padding="10dp"
    android:text="Create An Identity With Us"
    android:textAlignment="center"
    android:textColor="@android:color/white"
    android:textSize="14sp" />


  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ProgressBar
        android:id="@+id/reg_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

      <LinearLayout
        android:id="@+id/textboxes_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:padding="10dp"
          android:text="Only fields marked with * are compulsory"
          android:textColor="@android:color/black"
          android:textColorHint="@color/appColor"
          android:fontFamily="@font/google_sans_light"
          android:textSize="14sp" />


        <EditText
          android:id="@+id/reg_email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/stroke_textbox"
          android:hint="email *"
          android:inputType="textEmailAddress"
          android:padding="15dp"
          android:textColorHint="@color/appColor"
          android:fontFamily="@font/google_sans_light"
          android:textSize="14sp" />


        <EditText
          android:id="@+id/reg_phone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/stroke_textbox"
          android:hint="Telephone *"
          android:inputType="phone"
          android:padding="15dp"
          android:textColorHint="@color/appColor"
          android:fontFamily="@font/google_sans_light"
          android:textSize="14sp"/>

        <Spinner
          android:id="@+id/country_dropdown"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="5dp"
          android:layout_marginRight="30dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/stroke_textbox"
          android:padding="15dp"/>

        <TextView
          android:textColor="@android:color/black"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:text="Gender ( If you prefer not to say, please choose 'other' ) "
          android:textSize="12sp" />


<Spinner
          android:id="@+id/gender_dropdown"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="5dp"
          android:layout_marginRight="30dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/stroke_textbox"
          android:padding="15dp"/>

        <EditText

          android:id="@+id/reg_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/stroke_textbox"
          android:hint="Password *"
          android:inputType="textPassword"
          android:padding="15dp"
          android:textColorHint="@color/appColor"
          android:fontFamily="@font/google_sans_light"
          android:textSize="14sp" />

        <EditText
          android:id="@+id/reg_confirm_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/stroke_textbox"
          android:hint="Confirm Password *"
          android:inputType="textPassword"
          android:padding="15dp"
          android:textColorHint="@color/appColor"
          android:fontFamily="@font/google_sans_light"
          android:textSize="14sp" />

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginLeft="40dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_marginRight="40dp"-->
        <!--android:background="@color/text_default" />-->

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="25dp"
          android:padding="10dp"
          android:text="You can always fill these in now, or later"
          android:textColor="@android:color/black"
          android:textSize="13sp"
          android:visibility="gone" />

        <EditText
          android:id="@+id/reg_username"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/stroke_textbox"
          android:hint="What is your name?"
          android:padding="15dp"
          android:textSize="13dp"
          android:visibility="gone" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="25dp"
          android:padding="6dp"
          android:text="Date format Eg. 22-03-1998\nFun fact, you must be 13 or older"
          android:textColor="@color/star_color"
          android:textSize="12sp"
          android:visibility="gone" />

        <EditText
          android:id="@+id/reg_dob"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/stroke_textbox"
          android:hint="Date of birth Eg. 22-03-1998"
          android:inputType="date"
          android:padding="15dp"
          android:textSize="13dp"
          android:visibility="gone" />


        <EditText
          android:id="@+id/reg_whatsapp_number"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/stroke_textbox"
          android:hint="Whatsapp Number"
          android:inputType="phone"
          android:padding="15dp"
          android:textSize="13dp"
          android:visibility="gone" />


      </LinearLayout>


    </RelativeLayout>

  </ScrollView>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <Button
      android:id="@+id/reg_finish"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/login_button_shape_no_radius"
      android:textSize="13sp"
      android:padding="20dp"
      android:fontFamily="@font/google_sans"
      android:text="FINISH"
      android:textAllCaps="false"
      android:textColor="@android:color/white" />

    <Button
      android:id="@+id/reg_google"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/google_button_no_radius"
      android:onClick="registerWithGoogle"
      android:padding="20dp"
      android:fontFamily="@font/google_sans"
      android:text="USE GOOGLE"
      android:textAllCaps="false"
      android:textColor="@android:color/white"
      android:textSize="13sp" />

  </LinearLayout>
</RelativeLayout>