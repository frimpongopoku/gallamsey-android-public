<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="15dp"
  android:layout_marginBottom="5dp"
  android:id="@+id/rider_card_item"
  android:background="@drawable/stroke_textbox_b"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:layout_centerVertical="true"
      android:id="@+id/rider_profile_img"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_alignParentStart="true"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:contentDescription="Rider's profile image"
      android:src="@drawable/african_avatar_male" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginStart="10dp"
      android:layout_toEndOf="@id/rider_profile_img"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Akwesi Frimpong" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/verified_icon"
          android:layout_width="15dp"
          android:layout_height="25dp"
          android:layout_centerHorizontal="true"
          android:src="@drawable/verified_icon" />

        <TextView
          android:layout_marginStart="2dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="3dp"
          android:text="Verified"
          android:textSize="12sp" />

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginLeft="4dp"
          android:layout_marginTop="2dp"
          android:src="@drawable/gallam_gold_medal_2" />
      </LinearLayout>

    </LinearLayout>
  </RelativeLayout>

</LinearLayout>