<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:clickable="true"
  android:background="?attr/selectableItemBackground"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/pin_icon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:layout_marginStart="10dp"
    android:src="@drawable/profile_dummy_box_male" />

  <LinearLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginStart="10dp"
    android:layout_toEndOf="@id/pin_icon"
    android:orientation="vertical">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Akwesi Jordan"
      android:textColor="@android:color/black" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Verified Rider"
      android:textSize="12sp" />

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <ImageView
        android:layout_marginStart="5dp"
       android:layout_alignParentStart="true"
        android:id="@+id/love_icon"
        android:src="@drawable/love_icon"
        android:layout_width="20dp"
        android:layout_height="20dp" />
      <TextView
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@id/love_icon"
        android:id="@+id/number_of_favs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/google_sans_bold"
        android:text="17"
        android:textColor="@color/green"
        android:textSize="14sp" />
      <ImageView
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/number_of_favs"
        android:id="@+id/star"
        android:src="@drawable/ic_star_black_24dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />

      <TextView
        android:id="@+id/allowance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@id/star"
        android:fontFamily="@font/google_sans_bold"
        android:text="5"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="14sp" />

    </RelativeLayout>


  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@id/container"
    android:layout_marginTop="20dp"
    android:background="@color/lightest_grey" />

</RelativeLayout>