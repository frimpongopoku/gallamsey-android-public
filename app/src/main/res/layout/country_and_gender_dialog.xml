<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="15dp"
  android:orientation="vertical">

  <TextView
    android:text="Which country are you currently in? "
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
  <Spinner
    android:id="@+id/country_dropdown"
    android:layout_marginBottom="10dp"
    android:background="@drawable/stroke_textbox_b"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

  <LinearLayout
    android:id="@+id/regions_container"
    android:visibility="gone"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
      android:id="@+id/regions_text"
      android:text="What region? "
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
    <Spinner
      android:id="@+id/regions_dropdown"
      android:background="@drawable/stroke_textbox_b"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
  </LinearLayout>


</LinearLayout>