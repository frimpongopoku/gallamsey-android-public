<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
  <RelativeLayout
    android:id="@+id/top_controls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="0dp">

    <ImageView
      android:id="@+id/quit"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:clickable="true"
      android:src="@drawable/ic_close_icon_black_24dp" />

    <Button
      android:layout_marginRight="6dp"
      android:layout_toLeftOf="@+id/post_btn_container"
      android:paddingLeft="20dp"
      android:textSize="12sp"
      android:fontFamily="@font/google_sans_medium"
      android:textColor="@color/appColor"
      android:paddingRight="20dp"
      android:text="Save As Template"
      android:background="@drawable/stroke_button_light"
      android:id="@+id/template_btn"
      android:layout_width="wrap_content"
      android:layout_height="40dp" />

    <LinearLayout
      android:id="@+id/post_btn_container"
      android:orientation="vertical"
      android:layout_alignParentEnd="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <Button
        android:id="@+id/post_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_button_shape"
        android:fontFamily="@font/google_sans_bold"
        android:padding="10dp"
        android:text="Post"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
      <Button
        android:visibility="gone"
        android:id="@+id/sign_in_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_button_shape"
        android:fontFamily="@font/google_sans_bold"
        android:padding="10dp"
        android:text="SIGN IN"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
    </LinearLayout>

  </RelativeLayout>
</merge>