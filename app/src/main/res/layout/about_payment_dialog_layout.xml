<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="20dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <ImageView
      android:layout_marginTop="2dp"
      android:layout_width="10dp"
      android:layout_height="10dp"
      android:layout_marginRight="3dp"
      android:src="@drawable/info_icon" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/google_sans_bold"
      android:text="Information About Your Payment"
      android:textSize="14sp" />
  </LinearLayout>

  <TextView
    android:fontFamily="@font/google_sans_thin"
    android:layout_marginLeft="17dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:text="@string/payment_information_dialog_text" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <ImageView
      android:layout_marginTop="2dp"
      android:layout_width="10dp"
      android:layout_height="10dp"
      android:layout_marginRight="3dp"
      android:src="@drawable/info_icon" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/google_sans_bold"
      android:text="Fun fact, you can always get your money back"
      android:textSize="14sp" />
  </LinearLayout>
  <TextView
    android:fontFamily="@font/google_sans_thin"
    android:layout_marginLeft="17dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:text="@string/money_back" />


</LinearLayout>