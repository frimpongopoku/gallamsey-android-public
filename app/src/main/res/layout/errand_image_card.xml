<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginLeft="5dp"
  android:layout_marginRight="5dp"
  android:orientation="vertical"
  android:clickable="true"
  android:background="@drawable/grey_rectangle"

  >

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:id="@+id/user_details_div"
      android:layout_width="match_parent"
      android:layout_marginLeft="20dp"
      android:layout_height="wrap_content"
      android:padding="10dp">

      <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/w_p" />


      <LinearLayout
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
          android:textSize="11dp"
          android:id="@+id/img_errand_card_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/google_sans_light"
          android:text="Akwesi Frimpong" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="1dp"
          android:fontFamily="@font/google_sans_medium"
          android:text="Akwesi Frimpong" />

      </LinearLayout>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/user_details_div">

      <ImageView

        android:id="@+id/img_errand_card_image"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/waakye_plate_2" />

      <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/img_errand_card_image"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        >

        <TextView
          android:id="@+id/img_errand_card_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="Buy Me These Shoes"
          android:textSize="15sp" />


        <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <TextView
            android:id="@+id/img_errand_card_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="20"
            android:textColor="@color/cost_color"
            android:textSize="40sp" />
          <TextView
            android:id="@+id/cost_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_errand_card_cost"
            android:layout_marginTop="2dp"
            android:text="GHC" />
          <TextView
            android:id="@+id/img_errand_card_allowance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:text="5"
            android:textColor="@color/allowance_color"
            android:textSize="40sp" />
          <TextView
            android:id="@+id/profit_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_errand_card_allowance"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="40dp"
            android:text="GHC" />
        </RelativeLayout>
      </LinearLayout>
    </LinearLayout>
  </RelativeLayout>



</LinearLayout>