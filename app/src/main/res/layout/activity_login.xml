<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"

  tools:context=".Login">


  <ImageView
    android:layout_marginTop="90dp"
    android:id="@+id/reg_app_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="20dp"
    android:src="@drawable/galam2" />

  <LinearLayout
    android:id="@+id/bottom_div"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/reg_app_icon"
    android:layout_centerInParent="true"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <TextView
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:text="Please Enter Your Details" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:text="Forgot Password"
        android:textColor="@color/appColor" />
    </LinearLayout>

    <EditText
      android:id="@+id/log_email"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:background="@drawable/stroke_textbox"
      android:hint="Username"
      android:padding="15dp"
      android:textSize="14sp" />

    <EditText
      android:id="@+id/log_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="30dp"
      android:background="@drawable/stroke_textbox"
      android:hint="Password"
      android:inputType="textPassword"
      android:padding="15dp"
      android:textSize="14sp" />


  </LinearLayout>

  <LinearLayout
    android:paddingBottom="30dp"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/bottom_div">

    <Button
      android:id="@+id/login_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="10dp"
      android:background="@drawable/login_button_shape"
      android:padding="10dp"
      android:text="LOGIN"
      android:textAllCaps="false"
      android:textColor="@android:color/white"
      android:textSize="15dp" />

    <!--<TextView-->
      <!--android:layout_width="wrap_content"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:layout_gravity="left"-->
      <!--android:padding="10dp"-->
      <!--android:text="Sign in with" />-->

    <Button
      android:onClick="loginWithGoogle"
      android:layout_marginBottom="10dp"
      android:textColor="@android:color/white"
     android:text="Sign In With Google"
      android:background="@drawable/google_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />


  </LinearLayout>
  <ProgressBar
    android:id="@+id/log_spinner"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


</RelativeLayout>