<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="30dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/google_sans_bold"
        android:text="Settings"
        android:textSize="28sp" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/google_sans_medium"
        android:text="Account Settings"
        android:textSize="20sp" />

      <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/lightest_grey" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/orange_ripple"
        android:clickable="true"
        android:fontFamily="@font/google_sans_light"
        android:padding="15dp"
        android:text="Upgrade Membership"
        android:textSize="14sp" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/purple_ripple"
        android:clickable="true"
        android:fontFamily="@font/google_sans_light"
        android:padding="15dp"
        android:text="Set Home Location"
        android:textSize="14sp" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/orange_ripple"
        android:clickable="true"
        android:fontFamily="@font/google_sans_light"
        android:padding="15dp"
        android:text="Edit Profile"
        android:textSize="14sp" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/orange_ripple"
        android:clickable="true"
        android:fontFamily="@font/google_sans_light"
        android:padding="15dp"
        android:text="Get Verified"
        android:textSize="14sp" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/orange_ripple"
        android:clickable="true"
        android:fontFamily="@font/google_sans_light"
        android:padding="15dp"
        android:text="Suggest A New Feature"
        android:textSize="14sp" />


      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/google_sans_medium"
        android:text="Wallet"
        android:textSize="20sp" />

      <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/lightest_grey"
        android:clickable="true" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/orange_ripple"
        android:clickable="true"
        android:fontFamily="@font/google_sans_light"
        android:padding="15dp"
        android:text="Cash In"
        android:textSize="14sp" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/orange_ripple"
        android:clickable="true"
        android:fontFamily="@font/google_sans_light"
        android:padding="15dp"
        android:text="Cash Out"
        android:textSize="14sp" />

      <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/lightest_grey"
        android:clickable="true" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/orange_ripple"
        android:clickable="true"
        android:fontFamily="@font/google_sans"
        android:padding="15dp"
        android:text="SIGN OUT"
        android:textSize="14sp" />


    </LinearLayout>
  </ScrollView>


</LinearLayout>