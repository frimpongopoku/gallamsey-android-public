<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/white"
  tools:context=".NewErrandCreationPage">


  <RelativeLayout
    android:id="@+id/top_controls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">

    <ImageView
      android:id="@+id/close_button"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:clickable="true"
      android:src="@drawable/ic_close_icon_black_24dp" />

    <Button
      android:layout_width="100dp"
      android:layout_height="40dp"
      android:layout_alignParentEnd="true"
      android:layout_marginBottom="10dp"
      android:background="@drawable/login_button_shape"
      android:fontFamily="@font/google_sans_bold"
      android:padding="10dp"
      android:text="Post"
      android:textColor="@android:color/white"
      android:textSize="12sp" />
  </RelativeLayout>

  <!-- All Component Divs Start Here -->
  <LinearLayout
    android:id="@+id/tab_for_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/bottom_fake_nav"
    android:layout_below="@id/top_controls"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingBottom="20dp"
    android:visibility="gone">

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="none">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <ImageView
            android:id="@+id/user_profile_img_in_description"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/african_avatar_male" />

          <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/user_profile_img_in_description"
            android:background="@android:color/white"
            android:gravity="start"
            android:hint="Need anything now?"
            android:paddingStart="10dp"
            android:paddingEnd="15dp" />
        </RelativeLayout>


        <!-- UPLOAD PICTURE DIV -->
        <LinearLayout

          android:id="@+id/tab_for_image"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@id/bottom_fake_nav"
          android:layout_below="@id/top_controls"
          android:orientation="vertical"
          android:visibility="visible">

          <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/ic_broken_image_black_24dp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to add or remove image"
            android:textAlignment="center" />

        </LinearLayout>
      </LinearLayout>
    </ScrollView>
  </LinearLayout>

  <!-- ESTIMATE COST DIV -->
  <LinearLayout
    android:id="@+id/tab_for_estimated_cost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/bottom_fake_nav"
    android:layout_below="@id/top_controls"
    android:orientation="vertical"
    android:padding="20dp"
    android:visibility="gone">

    <!-- ............................- -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/payment_icon_2" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TextView
          android:id="@+id/currency_in_estimate_tab"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="How much will everything cost?" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/quick_sand_bold"
          android:text="Currency: GHS" />
      </LinearLayout>
    </LinearLayout>
    <!-- ............................- -->

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:background="@android:color/white"
      android:hint="0.00"
      android:inputType="numberDecimal"
      android:textColor="@color/green"
      android:textSize="50sp" />
  </LinearLayout>

  <!-- ALLOWANCE  DIV -->
  <LinearLayout
    android:id="@+id/tab_for_allowance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/bottom_fake_nav"
    android:layout_below="@id/top_controls"
    android:orientation="vertical"
    android:padding="20dp"
    android:visibility="gone">

    <!-- ............................- -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_card_giftcard" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TextView
          android:id="@+id/currency_in_allowance_tab"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="How much are you willing to give?" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/quick_sand_bold"
          android:text="Currency: GHS" />
      </LinearLayout>
    </LinearLayout>
    <!-- ............................- -->

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:background="@android:color/white"
      android:hint="0.00"
      android:inputType="numberDecimal"
      android:textColor="@color/green"
      android:textSize="50sp" />

  </LinearLayout>

  <!-- DETAILS DIV-->
  <LinearLayout
    android:id="@+id/tab_for_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/bottom_fake_nav"
    android:layout_below="@id/top_controls"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="This is where you give specific instructions that the rider, should not miss" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="10dp"
      android:orientation="horizontal"
      android:weightSum="5">

      <EditText
        android:id="@+id/edittext_in_details_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="4"
        android:background="@android:color/white"
        android:hint="Does the shoe have to be from Samsung?"
        android:textSize="16sp" />

      <ImageView
        android:id="@+id/add_btn_in_details_tab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:src="@drawable/ic_add_circle_black_24dp" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerview_in_details_tab"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="10dp" />
  </LinearLayout>

  <!-- End Of ALl Component Divs -->
  <!-- Bottom Controller Panel -->
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_above="@id/bottom_fake_nav"
    android:background="@color/lightest_grey" />

  <LinearLayout
    android:id="@+id/bottom_fake_nav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_help_black_24dp" />


      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginEnd="15dp"
          android:background="@drawable/ic_description_black_24dp" />

        <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginEnd="15dp"
          android:background="@drawable/image_vector_icon" />

        <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginTop="1dp"
          android:layout_marginEnd="15dp"
          android:background="@drawable/errand_payment_icon" />

        <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginEnd="15dp"
          android:background="@drawable/ic_card_giftcard_black_24dp" />

        <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginEnd="15dp"
          android:background="@drawable/location_vector_icon" />

        <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginEnd="15dp"
          android:background="@drawable/ic_list" />
      </LinearLayout>

    </RelativeLayout>

  </LinearLayout>

</RelativeLayout>